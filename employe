import java.util.ArrayList;
import java.util.List;
class Employee{
    int id;
    String name;
    double salary;
    Employee(int id, String name, double salary){
        this.id = id;
        this.name = name;
        this.salary = salary;
    }
    public void display(){
        System.out.println("id :" + id + ",name :"+ name +",salary :"+ salary);
    }
}
public class employ {
    public static void main(String[] args) {
            List<Employee>employees = new ArrayList<>();
            Employee e1 = new Employee(01,"Probhakar",4700);
            Employee e2 = new Employee(02,"Shizuka",8000);
            Employee e3 = new Employee(03,"Deksugi",5000);
            employees.add(e1);
            employees.add(e2);
            employees.add(e3);


            for (Employee emp : employees) {
                emp.display();
            }
        }
}
